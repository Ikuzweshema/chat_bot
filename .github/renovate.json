{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergePatch",
    ":automergeMinor",
    ":enableVulnerabilityAlerts"
  ],
  "schedule": [
    "on the first day of the month at 6:00am"
  ],
  "packageRules": [
    {
      "groupName": "radix-ui packages",
      "automerge": true,
      "matchPackageNames": [
        "/^@radix-ui//"
      ]
    },
    {
      "groupName": "auth packages",
      "automerge": true,
      "matchPackageNames": [
        "/^@auth//",
        "/^next-auth/"
      ]
    },
    {
      "groupName": "prisma packages",
      "automerge": true,
      "matchPackageNames": [
        "/^@prisma//"
      ]
    },
    {
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ],
      "groupName": "react core",
      "automerge": false
    },
    {
      "groupName": "type definitions",
      "automerge": true,
      "matchPackageNames": [
        "/^@types//"
      ]
    }
  ],
  "rangeStrategy": "pin",
  "ignoreDeps": [
    "babel-plugin-react-compiler",
    "next"
  ],
  "labels": [
    "dependencies"
  ],
  "prConcurrentLimit": 5,
  "automergeType": "pr",
  "platformAutomerge": true,
  "dependencyDashboard": true
}
